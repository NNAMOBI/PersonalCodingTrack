@model IEnumerable<Club>

@{
    ViewData["Title"] = "Club-Details-Page";
}
<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @foreach(var item in Model)
        {
                <div class="col">
                    <div class="card shadow-sm">
                       <img src="@item.Image"/>
                        <div class="card-body">
                            <p class="card-text">@item.Title</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" class="btn btn-sm btn-outline-secondary" id="btn-club" asp-controller="Club" asp-action="Details" asp-route-id="@item.Id">View</a>
                                    <a type="button" class="btn btn-sm btn-outline-secondary" asp-controller="Club" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                </div>
                                <small class="text-body-secondary">9 mins</small>
                            </div>
                        </div>
                    </div>
                </div>
        }
       </div>
    </div>
</div>
